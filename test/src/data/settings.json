        {
            "section-name": "Breakpoints",
            "tests": [
                {
                    "selector": "$scally-g-breakpoints: (\n    'palm': (640 / 16) * 1em,\n    'lap': (641 / 16) * 1em,\n    'lap-mid': (768 / 16) * 1em,\n    'lap-large': (901 / 16) * 1em,\n    'desk': (1200 / 16) * 1em, \n    'desk-large': (1366 / 16) * 1em\n);",
                    "selector-block": true,
                    "description": "All Scally breakpoints.<br><br><em>Scale your viewport up and down to see the breakpoints (they're applied as media query ranges for testing purposes but Scally uses <code class='c-code'>min-width</code> media queries).</em>",
                    "run": "<div class='t-settings__breakpoints'></div>",
                    "remove-legend": true
                }
            ]
        },


